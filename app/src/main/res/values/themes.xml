<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnLife" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redButtonBg</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.EnLife.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BasicEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/editext_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:padding">@dimen/dimen_size_15</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BasicText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
        <item name="android:padding">@dimen/dimen_size_5</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BasicButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/redButtonBg</item>
        <item name="fontFamily">@font/avenir_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dimen_size_5</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BasicRadioButton" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/avenir_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dimen_size_5</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:gravity">center</item>
    </style>

</resources>