<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_pager_data"
        android:layout_width="@dimen/dimen_size_150"
        android:layout_height="@dimen/dimen_size_150"
        android:layout_centerInParent="true"
        tools:src="@drawable/calendar" />

    <TextView
        android:id="@+id/txt_pager_data"
        style="@style/BasicText"
        android:lineSpacingExtra="@dimen/dimen_size_5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dimen_size_60"
        android:layout_marginEnd="@dimen/dimen_size_60"
        android:layout_marginBottom="@dimen/dimen_size_50"
        android:gravity="center"
        android:textSize="@dimen/text_size_18"
        tools:text="@string/wt_note_1" />

</RelativeLayout>