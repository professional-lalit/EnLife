<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_size_5">

    <TextView
        android:id="@+id/txt_event_index"
        android:layout_width="@dimen/dimen_size_50"
        android:layout_height="@dimen/dimen_size_50"
        android:background="@drawable/circle_black_bg"
        android:fontFamily="@font/avenir_bold"
        android:gravity="center"
        android:maxLength="2"
        android:src="@drawable/avatar"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_25"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/txt_event_title"
        style="@style/BasicText"
        android:layout_marginStart="@dimen/dimen_size_15"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintStart_toEndOf="@+id/txt_event_index"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Catch up with Janet" />

    <TextView
        android:id="@+id/txt_event_time"
        style="@style/BasicText"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:layout_marginTop="@dimen/dimen_size_5"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintStart_toEndOf="@+id/txt_event_index"
        app:layout_constraintTop_toBottomOf="@+id/txt_event_title"
        tools:text="8 - 10 am" />

    <TextView
        android:id="@+id/txt_event_goal"
        style="@style/BasicText"
        android:layout_marginStart="@dimen/dimen_size_10"
        android:includeFontPadding="false"
        android:textColor="@color/greyText"
        android:textSize="@dimen/text_size_13"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/txt_event_index"
        app:layout_constraintTop_toBottomOf="@+id/txt_event_time"
        tools:text="Associated with Health, Walk 2000 steps" />

</androidx.constraintlayout.widget.ConstraintLayout>