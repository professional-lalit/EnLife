<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_size_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingEnd="@dimen/dimen_size_5"
        android:paddingStart="@dimen/dimen_size_5"
        android:paddingBottom="@dimen/dimen_size_5">

        <ImageView
            android:id="@+id/img_author"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/marcus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_gradient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CC000000"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_quote"
            style="@style/BasicText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:lineSpacingExtra="@dimen/dimen_size_10"
            android:padding="@dimen/dimen_size_10"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/img_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="It is royal to do good and to be abused." />

        <TextView
            android:id="@+id/txt_author"
            style="@style/BasicText"
            android:layout_alignParentEnd="true"
            android:elevation="2dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_quote"
            tools:text="-Marcus Aurelius" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>