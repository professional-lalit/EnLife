<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_size_5">

    <TextView
        android:id="@+id/txt_milestone_title"
        style="@style/BasicText"
        android:includeFontPadding="false"
        android:padding="0dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Catch up with Janet" />

    <TextView
        android:id="@+id/txt_milestone_description"
        style="@style/BasicText"
        android:layout_marginTop="@dimen/dimen_size_5"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:padding="0dp"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_milestone_title"
        tools:text="XXXXXXXXXXXXXX XXXXXXXXXXX XXXXXXX XXXXXXXXXXX XXXXXXX XXXXXXXXXXX" />

    <TextView
        android:id="@+id/txt_milestone_duration"
        style="@style/BasicText"
        android:layout_marginTop="@dimen/dimen_size_5"
        android:fontFamily="@font/avenir_bold"
        android:padding="0dp"
        android:textColor="@color/redButtonBg"
        android:textSize="@dimen/text_size_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_milestone_description"
        tools:text="12 Jan - 15 July" />
</androidx.constraintlayout.widget.ConstraintLayout>