<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_size_50"
    android:layout_margin="@dimen/dimen_size_4"
    android:layout_height="@dimen/dimen_size_50">

    <ImageView
        android:id="@+id/img_selected_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_selected" />

    <TextView
        android:id="@+id/txt_day_value"
        style="@style/BasicText"
        android:layout_centerInParent="true"
        android:text="8"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_content_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_day_value"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_content_indicator" />

</RelativeLayout>